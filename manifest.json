{
  "manifest_version": 3,
  "name": "Personal Dashboard",
  "version": "1.0.0",
  "description": "A dynamic personal dashboard with time, weather, GitHub repos, quotes, and nature backgrounds.",
  "action": {
    "default_icon": "icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://api.allorigins.win/*",
    "https://apis.scrimba.com/*",
    "https://images.unsplash.com/*",
    "https://openweathermap.org/*",
    "https://api.github.com/*",
    "https://zenquotes.io/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
